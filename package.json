{
    "name": "bgmi",
    "version": "1.0.0",
    "description": "bangumi downloader",
    "author": "ekibun",
    "license": "MIT",
    "scripts": {
        "state": "webpack --config config/webpack.web.config.js --profile --json > stats.json",
        "serve": "cross-env NODE_ENV=development node config/server.js",
        "start": "cross-env NODE_ENV=production node config/server.js",
        "build:web": "rimraf dist/web && cross-env NODE_ENV=production webpack --config config/webpack.web.config.js --progress --hide-modules",
        "build:api": "rimraf dist/api && cross-env NODE_ENV=production webpack --config config/webpack.api.config.js --progress --hide-modules",
        "build:ssr": "rimraf dist/ssr && npm run build:ssr:web && npm run build:ssr:server",
        "build:ssr:web": "cross-env NODE_ENV=production webpack --config config/webpack.ssr.web.config.js --progress --hide-modules",
        "build:ssr:server": "cross-env NODE_ENV=production webpack --config config/webpack.ssr.server.config.js --progress --hide-modules"
    },
    "dependencies": {
        "aria2": "^4.0.3",
        "axios": "^0.19.0",
        "chalk": "^2.4.2",
        "connect-history-api-fallback": "^1.6.0",
        "cross-env": "^5.2.0",
        "html-minifier": "^4.0.0",
        "koa": "^2.7.0",
        "koa-body": "^4.1.0",
        "koa-router": "^7.4.0",
        "koa-send": "^5.0.0",
        "mz": "^2.7.0",
        "vue": "^2.6.10",
        "vue-i18n": "^8.12.0",
        "vue-icon": "^2.1.1",
        "vue-material": "^1.0.0-beta-11",
        "vue-router": "^3.0.6",
        "vue-server-renderer": "^2.6.10",
        "vuex": "^3.1.1",
        "vuex-router-sync": "^5.0.0",
        "ws": "^7.0.1"
    },
    "devDependencies": {
        "@types/koa": "^2.0.49",
        "@types/mz": "^0.0.32",
        "@types/webpack-env": "^1.14.0",
        "@types/ws": "^6.0.1",
        "autoprefixer": "^9.6.1",
        "case-sensitive-paths-webpack-plugin": "^2.2.0",
        "css-loader": "^3.0.0",
        "friendly-errors-webpack-plugin": "^1.7.0",
        "html-webpack-plugin": "^3.2.0",
        "koa-convert": "^1.2.0",
        "koa-webpack-hot-middleware": "^1.0.3",
        "memory-fs": "^0.4.1",
        "mini-css-extract-plugin": "^0.7.0",
        "node-sass": "^4.13.1",
        "path": "^0.12.7",
        "postcss-loader": "^3.0.0",
        "readline": "^1.3.0",
        "sass-loader": "^7.1.0",
        "ts-loader": "^6.0.4",
        "typescript": "^3.5.3",
        "vue-loader": "^15.7.0",
        "vue-template-compiler": "^2.6.10",
        "webpack": "^4.35.2",
        "webpack-cli": "^3.3.5",
        "webpack-dev-middleware": "^3.7.0",
        "webpack-merge": "^4.2.1",
        "webpack-node-externals": "^1.7.2"
    }
}
